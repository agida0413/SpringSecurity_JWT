<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sist.mapper.RefreshMapper">
	<select id="findRefresh" parameterType="String" resultType="int">
	Select count(*) from refresh where refresh=#{refresh}
	
	</select>
		
	<delete id="deleteRefresh" parameterType="String">
	delete from refresh where refresh=#{refresh}
	</delete>
	
	<insert id="save" parameterType="RefreshEntity">
	Insert into refresh (username,refresh,expiration)
	values(#{username},#{refresh},#{expiration})
	</insert>
	
 </mapper>